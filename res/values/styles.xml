<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="target_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/corner</item>
    </style>
    
    <style name="process_button">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/corner</item>
    </style>
    
    <style name="result_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">130dp</item> 
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/corner</item>
    </style>
    
    <style name="event_view">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">3dp</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:background">#BEBEBE</item>
    </style>

</resources>
