<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView 
        android:id="@+id/tvResultTargetName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp" />
	
	<TextView
	    android:id="@+id/tvResultTargetFinished"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
	    android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/pbResultFinished"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_marginLeft="30dp"
        android:layout_height="15dp"
		android:progressDrawable="@drawable/barcolor"
        android:layout_below="@+id/tvResultTargetName"
        android:max="10000" />
    
    <Button
        android:id="@+id/btResultDetail"
		style="@style/result_button"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
        android:layout_below="@id/pbResultFinished"
        android:text="@string/result_detail" />

</RelativeLayout>
